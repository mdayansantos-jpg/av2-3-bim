// schema.prisma

datasource db {
  provider = "mysql"  
  url      = env("mysql-mdrs67.alwaysdata.net") 
}
// Definindo o gerador para o cliente Prisma
generator client {
  provider = "prisma-client-js"
}

// Definindo o modelo User
model User {
  id        Int       @id @default(autoincrement()) 
  name      String    
  email     String    @unique 
  password  String    
  createdAt DateTime  @default(now()) 
  updatedAt DateTime  @updatedAt 
}

model Store {
  id        Int       @id @default(autoincrement()) // Identificador único da loja
  name      String    // Nome da loja
  location  String?   // Localização da loja (opcional)
  createdAt DateTime  @default(now()) // Data de criação da loja
  updatedAt DateTime  @updatedAt // Data de atualização da loja

  // Relação com o usuário (um usuário pode ser dono de muitas lojas)
  userId    Int       // Referência ao usuário dono da loja
  user      User      @relation(fields: [userId], references: [id]) // Relacionamento com a tabela User
}

// Definindo o modelo Product
model Product {
  id          Int       @id @default(autoincrement()) // Identificador único do produto
  name        String    // Nome do produto
  description String?   // Descrição do produto (opcional)
  price       Float     // Preço do produto
  createdAt   DateTime  @default(now()) // Data de criação do produto
  updatedAt   DateTime  @updatedAt // Data de atualização do produto
}